<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CustomNoActionBar" parent="Theme.Design.Light">
        <item name="actionBarSize">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/translation</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="android:windowBackground">@color/white</item>-->
        <item name="android:screenOrientation">landscape</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="CustomActivity" parent="CustomNoActionBar">
        <item name="android:screenOrientation">landscape</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <declare-styleable name="baseTitleView">
        <attr name="titleTextColor" format="color" />
        <attr name="titleText" format="string" />
        <attr name="titleTextSize" format="integer" />
    </declare-styleable>

    <!-- 自定义四角矩形ImageView 的四个圆角属性 -->
    <declare-styleable name="Round_Angle_Image_View">
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>
</resources>